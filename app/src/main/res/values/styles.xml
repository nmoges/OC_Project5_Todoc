<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- No Action Bar theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Spinner style -->
    <style name="SpinnerStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- MaterialTextView style -->
    <style name="MaterialTextViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/no_task</item>
        <item name="android:textSize">22sp</item>
        <item name="drawableTopCompat">@drawable/ic_work_off</item>
    </style>

    <!-- MaterialTextViewItem style -->
    <style name="MaterialTextViewItemStyle">
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- FloatingActionButton style -->
    <style name="FloatingActionButtonStyle">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:contentDescription">@string/add_task</item>
        <item name="srcCompat">@drawable/ic_add</item>
    </style>

    <!-- AppCompatImageViewStyle -->
    <style name="AppCompatImageViewStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
